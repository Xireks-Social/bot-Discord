import discord
from discord.ext import commands
intents = discord.Intents.default()
intents.message_content = True

bot = commands.Bot(command_prefix='/', intents=intents)

@bot.command()
async def start(ctx):
    await ctx.send(f'Привет! Я экология-бот! Я помогу и расскажу тебе как заботится о природе. Введите one что бы узнать факты о природе, введите two что бы узнать как правильно сортировать мусор, введите three что бы узнать как выращивать растения.')


@bot.command()
async def one(ctx):
    await ctx.send(f"о чем вы хотите узнать факты? tree - о деревьях, flowers - о цветах")
    
@bot.command()
async def tree(ctx):
    await ctx.send(f'Вот 5 фактов о деревьях: 1. Самое высокое дерево в мире - секвойя по имени Гиперион, его высота более 115 метров! 2. Деревья могут "разговаривать" друг с другом через сеть грибков в почве. 3. Деревья могут выделять летучие органические соединения, которые защищают их от вредителей. 4. Самое старое дерево в мире - сосна остистая по имени Мафусаил, возраст которой более 4800 лет. 5. Деревья могут поглощать углекислый газ и производить кислород, что делает их важными для жизни на Земле.')

@bot.command()
async def flowers(ctx):
    await ctx.send(f'1. Цветы могут обманывать насекомых, имитируя других животных. 2. Цветы могут "пахнуть" по-разному в зависимости от времени суток. 3. Цветы могут "помнить" своих опылителей. 4. Цветы могут улучшать наше настроение. 5. Цветы могут быть хищниками, поедая насекомых.')
bot.run("token")
